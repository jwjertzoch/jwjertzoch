<!DOCTYPE html>
<html>
  <head>
    <title>Capeline</title>


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>

  </head>
  <body>

  <!-- ********************************* -->
  <!-- ********* NAVIGATION BAR ******** -->
  <!-- ********************************* -->

  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid container-fluid-nav">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div><!-- /navbar-header -->
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Products", products_path %></li>
          <li><%= link_to "About", simple_pages_about_path %></li>
          <li><%= link_to "Contact", simple_pages_contact_path %></li>
          <li><%= form_with(model: @product_search_obj, method: 'get', local:true, class: "navbar-form navbar-right") do |form| %>
            <%= text_field_tag(:q, "", type: "text", class: "form-control", placeholder: "search text") %>
            <%= submit_tag("Search", class: "btn btn-default")   %>
            <% end %></li>
            <ul class="nav pull-right">
              <li>
                <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
                <% else %>
                <%= link_to('Login', new_user_session_path) %>
                <% end %>
              </li>
            </ul>
        </ul>
      </div>

  </nav>

<div class="sixteen columns logo">
    <%= link_to root_path do %>


          <a href="https://capeline.herokuapp.com/" title="Capeline">

              <img src="https://images1.dawandastatic.com/User/9839/9839510/user_200/1505207152-842.jpg">

          </a>
            <% end %>
        </div>




    <!-- flash notice tags -->
    <% if notice %>
    <p id="notice" class="alert alert-info"><%= notice %></p>
    <% end %>

    <% if alert %>
    <p id="alert" class="alert alert-info"><%= alert %></p>
    <% end %> <!-- end flash notice tags -->









  <div class="page-wrap">
    <%= yield %>
  </div>

  <!-- ********************************* -->
  <!-- ************* Footer ************ -->
  <!-- ********************************* -->

  <footer class = "container-fluid copy-right"> &copy; 2018 Jennifer Wjertzoch
    <a><i class = "fa fa-twitter-square" aria-hidden="true"></i></a>
    <a><i class = "fa fa-facebook-square" aria-hidden="true"></i></a>
  </footer
  </body>
</html>
